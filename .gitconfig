[user]
	name = Vladimir Popov
	email = vladimir@dokwork.ru
[alias]
	co = checkout
	st = status -sb
	ci = commit
  cm = commit -am
	br = branch
	review = merge --no-ff --no-commit 
	hist = log --pretty=format:%h %ad | %s%d [%an] --graph --date=short
[init]
	defaultBranch = main
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[difftool "vimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE"
[mergetool "vimdiff"]
  cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE"
[core]
	editor = nvim
[pager]
	branch = false
	log = false
